<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ViewcontentVer1Category.ViewFragmentContentver1Category">

    <ImageButton
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_marginLeft_20dp"
        android:layout_marginTop="@dimen/layout_marginTop_40dp"
        android:background="@drawable/buttonback"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_marginLeft_36dp"
        android:layout_marginTop="@dimen/layout_marginTop_40dp"
        android:text="Категория"
        android:textSize="@dimen/twenty"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/buttonBack"
        app:layout_constraintTop_toTopOf="parent" />

    <SearchView
        android:layout_width="@dimen/layout_width_328dp"
        android:layout_height="@dimen/layout_height_36dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/layout_marginTop_100dp"
        android:iconifiedByDefault="false"
        android:queryHint="Название продукта"
        />


    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_marginTop_166dp"
        android:scrollbars="none"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_marginLeft_16"
                android:background="@drawable/buttoncategorycustom"
                android:text="Категория"
                android:textColor="@color/black"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_marginLeft_20dp"
                android:background="@color/buttomCategory"
                android:text="Категория"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_marginLeft_20dp"
                android:background="@color/buttomCategory"
                android:text="Категория"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_marginLeft_20dp"
                android:background="@color/buttomCategory"
                android:text="Категория"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_marginLeft_20dp"
                android:background="@color/buttomCategory"
                android:text="Категория"

                />
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/textViewCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_marginLeft_16"
        android:text="Категория"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView"
        android:layout_marginTop="@dimen/layout_marginTop_34dp"
        android:textSize="@dimen/sixteen"
        />
    
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintViewProduct"
            android:layout_width="@dimen/layout_width_168dp"
            android:layout_height="@dimen/layout_height_268dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/layout_marginTop_302dp"
            >

            <ImageView
                android:id="@+id/imageViewProduct"
                android:layout_width="@dimen/layout_width_168dp"
                android:layout_height="@dimen/layout_height_168dp"
                android:src="@drawable/imageviewproduct1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="8dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/discountview"
                android:gravity="center"
                android:text="Скидка"
                app:layout_constraintTop_toTopOf="@id/imageViewProduct"
                app:layout_constraintLeft_toLeftOf="@id/imageViewProduct"
                android:layout_marginTop="@dimen/layout_marginTop_8dp"
                android:layout_marginLeft="@dimen/layout_marginLeft_8dp"
                />


            <TextView
                android:id="@+id/textViewNameDrink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Вода Эко"
                android:textSize="@dimen/sixteen"
                app:layout_constraintTop_toBottomOf="@id/imageViewProduct"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="@dimen/layout_marginTop_9"
                android:layout_marginLeft="@dimen/layout_marginLeft_8dp"
                />

            <TextView
                android:id="@+id/textViewNumberForLiter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="500 мл"
                app:layout_constraintTop_toBottomOf="@id/textViewNameDrink"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="@dimen/layout_marginLeft_8dp"
                />

            <Button
                android:layout_width="@dimen/layout_width_152dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/textViewNumberForLiter"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="@dimen/layout_marginTop_20dp"
                android:text="550 тг"
                android:layout_gravity="center"
                android:background="@drawable/buttoncurrentprice"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="@dimen/layout_width_168dp"
            android:layout_height="@dimen/layout_height_268dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/constraintViewProduct"
            android:layout_marginTop="@dimen/layout_marginTop_302dp"
            android:layout_marginLeft="@dimen/layout_marginLeft_8dp"
            >

            <ImageView
                android:id="@+id/imageViewProduct2"
                android:layout_width="@dimen/layout_width_168dp"
                android:layout_height="@dimen/layout_height_168dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:src="@drawable/imageviewproduct1"
                />

            <TextView
                android:id="@+id/textViewNameDrink2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Вода Эко"
                android:textSize="@dimen/sixteen"
                app:layout_constraintTop_toBottomOf="@id/imageViewProduct2"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="@dimen/layout_marginTop_9"
                android:layout_marginLeft="@dimen/layout_marginLeft_8dp"
                />
            <TextView
                android:id="@+id/textViewNumberForLiter2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="550 тг 500 мл"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewNameDrink2"
                android:layout_marginLeft="@dimen/layout_marginLeft_8dp"
                />

            <Button
                android:id="@+id/buttonMinus"
                android:layout_width="@dimen/layout_width_32dp"
                android:layout_height="@dimen/layout_height_32dp"
                app:layout_constraintTop_toBottomOf="@id/textViewNumberForLiter2"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="@dimen/layout_marginTop_20dp"
                android:layout_marginLeft="@dimen/layout_marginLeft_8dp"
                android:background="@drawable/imageminus"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/textViewNumberForLiter2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="@dimen/layout_marginTop_28dp"
                android:text="10"
                />

            <Button
                android:layout_width="@dimen/layout_width_32dp"
                android:layout_height="@dimen/layout_height_32dp"
                app:layout_constraintTop_toBottomOf="@id/textViewNumberForLiter2"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="@dimen/layout_marginTop_20dp"
                android:layout_marginRight="@dimen/layout_marginRight_8dp"
                android:background="@drawable/buttonplus"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayoutMyBasket"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_96dp"
            android:background="@drawable/constraintinthebusket"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/layout_marginTop_570dp"
            android:visibility="visible"
            >
            
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/buttoninthebusket"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="@dimen/layout_marginTop_8dp"
                android:text="В корзине 550 тг"
                android:textColor="@color/white"
                />
            
        </androidx.constraintlayout.widget.ConstraintLayout>
    <fragment
        android:id="@+id/fragmentSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="ViewcontentVer1Category.FragmentMoreAboutAProduct"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <fragment
        android:id="@+id/fragment2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="ViewcontentVer1Category.FragmentShowFullDescription"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>